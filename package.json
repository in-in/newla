{
  "name": "newla",
  "config": {
    "stylelint": ".config/stylelint.json"
  },
  "scripts": {
    "build": "npm-run-all build:*",
    "prebuild": "rm -rf dist/",
    "build:html": "pug src -o dist/",
    "build:css": "postcss -c .config/postcss.json -d dist src/style.css",
    "lint": "npm-run-all lint:*",
    "prelint:css": "stylefmt -c $npm_package_config_stylelint src/style.css src/style.css",
    "lint:css": "stylelint 'src/*.css' --config $npm_package_config_stylelint",
    "watch": "npm-run-all -p watch:*",
    "watch:html": "chokidar 'src/*.pug' -c 'npm run build:html'"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "chokidar-cli": "^1.2.0",
    "npm-run-all": "^4.0.1",
    "postcss-cli": "^2.6.0",
    "pug-cli": "^1.0.0-alpha6",
    "stylefmt": "^5.1.1",
    "stylelint": "^7.8.0"
  }
}
