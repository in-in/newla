{
  "name": "newla",
  "config": {
    "stylelint": ".config/stylelint.json",
    "stylelintignore": ".config/.stylelintignore"
  },
  "scripts": {
    "start": "npm-run-all clean build -p watch serve",
    "clean": "rm -rf dist/",
    "build": "npm-run-all build:*",
    "prebuild:css": "npm-run-all lint",
    "build:html": "pug src/*.pug -o dist/",
    "build:css": "postcss -c .config/postcss.json -d dist src/styles/*.css",
    "lint": "npm-run-all lint:*",
    "prelint:css": "stylefmt -c $npm_package_config_stylelint -i $npm_package_config_stylelintignore -r 'src/**/*.css'",
    "lint:css": "stylelint 'src/**/*.css' -i $npm_package_config_stylelintignore --config $npm_package_config_stylelint",
    "watch": "npm-run-all -p watch:*",
    "watch:html": "chokidar 'src/**/*.pug' -c 'npm run build:html'",
    "watch:css": "chokidar 'src/**/*.css' -i 'src/styles/lib' -c 'npm run build:css'",
    "serve": "browser-sync start -c .config/bs-config.js -s 'dist' -f 'dist'"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "browser-sync": "^2.18.8",
    "chokidar-cli": "^1.2.0",
    "imagemin-cli": "^3.0.0",
    "npm-run-all": "^4.0.1",
    "postcss-cli": "^2.6.0",
    "postcss-csso": "^1.1.2",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-easy-import": "^2.0.0",
    "postcss-media-minmax": "^2.1.2",
    "pug-cli": "^1.0.0-alpha6",
    "stylefmt": "^5.1.1",
    "stylelint": "^7.8.0"
  }
}
